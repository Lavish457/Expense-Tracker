<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TripDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#8d54ef"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/cardExpense"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/back"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="26dp"
                        android:id="@+id/back"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/generateBill"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:src="@drawable/bill"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Bill"
                            android:textSize="12sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/back"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="25dp"
                        android:id="@+id/tripName"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tripName"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:text="Total Expenses"
                        android:textSize="14sp"
                        android:id="@+id/expenseTotal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/expenseTotal"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/expenseAmount"
                        android:textSize="32sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/expenseAmount"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="2dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:id="@+id/expenseCount"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:id="@+id/memberCount"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardExpense"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:weightSum="3"
                android:orientation="horizontal"
                android:background="#f3f4f6"
                android:id="@+id/tabLayout"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f3f4f6"
                    app:cardCornerRadius="0dp"
                    android:layout_margin="6dp"
                    app:strokeWidth="0dp"
                    android:id="@+id/tabBalances"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balances"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:id="@+id/tvBalance"
                        android:textStyle="bold"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f3f4f6"
                    app:cardCornerRadius="0dp"
                    android:layout_margin="6dp"
                    android:id="@+id/tabExpenses"
                    app:strokeWidth="0dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:layout_gravity="center"
                        android:textColor="#6d6d78"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/tvExpense"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f3f4f6"
                    app:cardCornerRadius="0dp"
                    android:layout_margin="6dp"
                    android:id="@+id/tabSettle"
                    app:strokeWidth="0dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settle"
                        android:layout_gravity="center"
                        android:textColor="#6d6d78"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/tvSettle"
                        />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/tabFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:name="androidx.fragment.app.Fragment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:id="@+id/addNewExpense"
        android:background="@drawable/fab"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/expense"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addNewExpense"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/addNewMember"
        android:gravity="center"
        android:background="@drawable/fab"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/add_person"
            android:gravity="center"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>