<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BillDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/rupee"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imgRupee"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="22dp"
                android:text="Trip Bill"
                app:layout_constraintLeft_toRightOf="@+id/imgRupee"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/close"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:id="@+id/close"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/imgRupee"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:id="@+id/TName"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/TName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/TDescription"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="18sp"
                android:lines="1"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/TDescription"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/TDate"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="18sp"
                android:lines="1"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@+id/TDate"
                android:layout_marginTop="10dp"
                android:background="@drawable/line"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/line1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:text="Expense Details"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/txtDetails"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycleExpenses"
                app:layout_constraintTop_toBottomOf="@+id/txtDetails"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/expense_list"
                android:paddingBottom="30dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@+id/recycleExpenses"
                android:layout_marginTop="10dp"
                android:background="@drawable/line"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/line2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:text="Expense Details"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/txtMemberSummary"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMemberSummary"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/balance_list"
                android:id="@+id/recycleMembers"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@+id/recycleMembers"
                android:layout_marginTop="10dp"
                android:background="@drawable/line"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/line3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:id="@+id/linearAmount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:weightSum="2"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/line3"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount"
                        android:id="@+id/Total"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TotalAmount"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@+id/linearAmount"
                android:layout_marginTop="10dp"
                android:background="@drawable/line"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/line4"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    android:text="Generated on 21/12/2005 at 10:13:24 am"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/dateTime"
                    android:textColor="#B3B1B1"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dateTime"
                android:text="ID : 12233455"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tripID"
                android:textColor="#B3B1B1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/tripID"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/edit2"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:id="@+id/download"
                android:gravity="center"
                >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/download"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Bill"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>