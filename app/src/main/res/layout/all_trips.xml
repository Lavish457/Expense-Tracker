<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/tripCard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:maxWidth="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/tripName"
                android:text="Jaipur Heritage Tour"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:maxWidth="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tripName"
                android:id="@+id/tripDetail"
                android:text="Exploring Pink City"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,400"
                android:id="@+id/tripExpense"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#7c3bed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@+id/tripExpense"
                android:text="â‚¹"
                android:textSize="24sp"
                android:textColor="#7c3bed"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalExpense"
                android:text="5 expenses"
                app:layout_constraintTop_toBottomOf="@+id/tripExpense"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:textStyle="italic"
                android:textColor="#494949"
                />
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tripDetail"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/dateLL"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="12/11/2025"
                    android:textColor="@color/black"
                    android:id="@+id/date"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tripDetail"
                app:layout_constraintLeft_toRightOf="@+id/dateLL"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/membersLL"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 members"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/members"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>